<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewAlarmActivity"
    android:background="#831212">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#C8BFBF"
        >

        <EditText
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/edTxtHour"
            android:hint="Hour"
            android:inputType="number"/>

        <EditText
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/edTxtMinute"
            android:layout_toRightOf="@+id/edTxtHour"
            android:hint="Minute"
            android:inputType="number" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/AddAlarm"
            android:layout_below="@id/edTxtMinute"
            android:layout_centerHorizontal="true"
            android:text="Add alarm"
            />

    </RelativeLayout>


</RelativeLayout>